<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    POP<span style="color: #1EDD88;">APP</span>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Sign in with Square", "https://#{ENV['OAUTH_ENVIRONMENT']}/oauth2/authorize?client_id=#{ENV['SQUARE_APPLICATION_ID']}&scope=#{ENV['SQUARE_PERMISSIONS']}", target: '_blank', class:"btn btn-primary"%>
        </li>
      <% end %>
    </ul>
  </div>
</div>
